<div class="container">
  <div class="row">
    <div class="col s12">
      <div class="questionaire-show">
        <div class="questionaire-box-text">
        <div class="title-questionaire">
          <h3><%= @questionaire.title %></h3>
        </div>
        <div class="questionaire-instruction">
          <%= @questionaire.instruction %>
        </div>
        </div>
        <div class="current-evaluations">
        <%= @text_evaluations %>
        </div>
      </div>
    </div>
  </div>

  <div class="container-questions">
    <div id="questions">
      <% if @questionaire.questions.blank? %>
      <div id="no-questions">
        Create your first question.
      </div>
      <% else %>
      <div class="collection with-header">
        <div class="collection-header"><h4>Questions</h4></div>
      <% @questionaire.questions.each do |question| %>
      <%= render 'dashboard/questions/show', question: question, questionaire: @questionaire %>
      <% end %>
      <% end %>
      </div>
    </div>
  </div>

<%= render 'dashboard/questions/form', question: @question, questionaire: @questionaire %>
</div>


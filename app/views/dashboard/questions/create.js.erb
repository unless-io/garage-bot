<% if @question.errors.any? %>
  // Render new review form with errors
  $('#new_question').html("<%= j render 'dashboard/questions/form', questionaire: @questionaire, question: @question %>");
<% else %>
  // Create a paragraph for the new review. But hide it.
  var new_question = $("<%= j render 'dashboard/questions/show', question: @question %>").hide();
  // Add it to the DOM, at the end of the existing reviews. It's still hidden.
  $('#questions').append(new_question);
  // Show the new review with an animation!
  new_question.slideDown();
  // Reset the form
  $('#new_question').html("<%= j render 'dashboard/questions/form', questionaire: @questionaire, question: Question.new %>");
<% end %>
